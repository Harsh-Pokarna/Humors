<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gradientLightColor"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    tools:context=".auth.WelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MontserratBold"
            android:text="HUMORS"
            android:textColor="@color/white"
            android:textSize="38sp" />

        <TextView
            style="@style/PoppinsMedium"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Detect disorders early, "
            android:textSize="20sp"/>
        <TextView
            style="@style/PoppinsMedium"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="before they turn"
            android:textSize="20sp"/>
        <TextView
            style="@style/PoppinsMedium"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="problematic"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="32dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:textColor="@color/white"
            android:background="@drawable/google_signin_button_bg"
            android:text="Sign in With Google"
            android:drawableStart="@drawable/ic_google_signin_icon"
            android:paddingStart="11dp"
            android:paddingEnd="105dp"
            android:id="@+id/google_signin_button"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:text="Sign in With Email"
            android:drawableStart="@drawable/ic_mail_siginin_icon"
            android:paddingStart="11dp"
            android:paddingEnd="105dp"
            android:id="@+id/mail_signin_button"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PoppinsRegular"
                android:text="New to Humors? "
                android:textColor="@color/white"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/register_now_button_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Register Now!"
                style="@style/PoppinsBold"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>