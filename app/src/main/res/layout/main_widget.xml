<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <app.futured.donut.DonutProgressView
            android:id="@+id/health_status_graph"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            app:donut_animationDuration="2000"
            app:donut_bgLineColor="@color/white"
            app:donut_cap="100"
            app:donut_gapWidth="0"
            app:donut_strokeWidth="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_health_status"
                style="@style/PoppinsBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textColor="@color/yellow"
                android:textSize="40sp" />

            <TextView
                style="@style/PoppinsRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Status"
                android:textColor="@color/yellow"
                android:textSize="16sp" />
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>