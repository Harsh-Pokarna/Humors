<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".newUser.NewUserHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            <include layout="@layout/home_dashboard"/>-->
            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gradientDarkColor"
                    android:text="COMPLETE YOUR PROFILE"
                    android:letterSpacing="0.05"
                    style="@style/PoppinsMedium"
                    android:textSize="14sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_details_card_view"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:background="@color/editTextColor"
                    android:layout_height="72dp"
                    app:cardMaxElevation="100dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_details_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Add your details"
                            android:layout_marginStart="25dp"
                            style="@style/PoppinsMedium"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageButton
                            android:id="@+id/bt1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/image_button_bg"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/share_habits_card_view"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    app:cardMaxElevation="100dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_share_habits_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Share your habits"
                            android:layout_marginStart="25dp"
                            style="@style/PoppinsMedium"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageButton
                            android:id="@+id/bt3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/image_button_bg"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/medical_history_card_view"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    app:cardMaxElevation="100dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_share_med_history_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Your medical history"
                            android:layout_marginStart="25dp"
                            style="@style/PoppinsMedium"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageButton
                            android:id="@+id/bt4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/image_button_bg"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:background="@drawable/selected_dashboard_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_connect_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Connect your device"
                        style="@style/PoppinsMedium"
                        android:textSize="14sp"/>
                    <TextView
                        android:textColor="#ADC2EA"
                        android:text="To record your health with ease"
                        android:textSize="12sp"
                        style="@style/PoppinsRegular"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/connect_device"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    style="@style/PoppinsMedium"
                    android:textColor="@color/white"
                    android:text="Connect"
                    android:stateListAnimator="@null"
                    android:background="@drawable/connect_button_bg"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>