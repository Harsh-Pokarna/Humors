<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparentColor"
    android:paddingHorizontal="20dp"
    android:paddingTop="30dp"
    tools:context=".auth.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MontserratBold"
            android:text="HUMORS"
            android:textColor="@color/white"
            android:textSize="38sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/PoppinsMedium"
                android:layout_marginTop="10dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Detect disorders early, "
                android:textSize="20sp"/>
            <TextView
                style="@style/PoppinsMedium"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="before they turn"
                android:textSize="20sp"/>
            <TextView
                style="@style/PoppinsMedium"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="problematic"
                android:textSize="20sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/user_email_edittext_login"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:background="@drawable/edittext_bg"
            android:hint="Enter your mail"
            android:paddingHorizontal="12dp"
            android:textColor="@color/black"
            android:layout_height="42dp"/>

        <EditText
            android:id="@+id/user_password_edittext_login"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:hint="Enter your password"
            android:paddingHorizontal="12dp"
            android:textColor="@color/black"
            android:layout_height="42dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Forgot password"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:id="@+id/forgot_password_button"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:layout_marginTop="20dp"
            style="@style/MontserratBold"
            android:text="LOGIN"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PoppinsRegular"
                android:text="New to Humors? "
                android:textColor="@color/white"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/register_now_button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Register Now!"
                style="@style/PoppinsBold"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>