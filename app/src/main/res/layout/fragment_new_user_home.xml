            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gradientDarkColor"
                    android:text="COMPLETE YOUR PROFILE"
                    android:letterSpacing="0.05"
                    style="@style/PoppinsMedium"
                    android:textSize="14sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_details_card_view"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    app:cardMaxElevation="100dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleY="1.38"
                            android:scaleX="1.38"
                            android:src="@drawable/ic_walking_man_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Add your details"
                            android:layout_marginStart="25dp"
                            style="@style/PoppinsMedium"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/image_button_bg"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/share_habits_card_view"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    app:cardMaxElevation="100dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
